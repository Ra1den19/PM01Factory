<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             x:Class="MobileJob.ApplicationsPage"
             Title="Мои заявки"
             BackgroundColor="#F5F7FA">

    <RefreshView x:Name="refreshView"
                Command="{Binding RefreshCommand}"
                IsRefreshing="{Binding IsRefreshing}">
        <Grid Padding="5">
            <!-- Список заявок в плиточном дизайне с увеличенными отступами -->
            <CollectionView x:Name="applicationsCollectionView"
                          SelectionMode="None"
                          ItemsLayout="VerticalGrid, 2"
                          ItemsUpdatingScrollMode="KeepLastItemInView">

                <!-- Увеличенные отступы между элементами -->
                <d:CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"
                                    Span="2"
                                    VerticalItemSpacing="20"
                                    HorizontalItemSpacing="15"/>
                </d:CollectionView.ItemsLayout>

                <CollectionView.EmptyView>
                    <StackLayout VerticalOptions="Center"
                                 HorizontalOptions="Center"
                                 Padding="20"
                                 Spacing="10">
                        <Label Text="У вас пока нет заявок"
                               FontSize="20"
                               TextColor="#A0AEC0"
                               HorizontalOptions="Center"/>
                        <Label Text="Все отправленные заявки будут отображаться здесь"
                               FontSize="14"
                               TextColor="#CBD5E0"
                               HorizontalOptions="Center"/>
                    </StackLayout>
                </CollectionView.EmptyView>

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <!-- Увеличенные отступы внутри карточки -->
                        <Frame Margin="0"
                               Padding="20"
                               CornerRadius="12"
                               BackgroundColor="White"
                               HasShadow="False"
                               HeightRequest="150">
                            <StackLayout Spacing="10">
                                <!-- Заголовок -->
                                <Label Text="{Binding ResumeTitle}"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="#1A202C"
                                       LineBreakMode="TailTruncation"/>

                                <!-- Разделитель с отступом -->
                                <BoxView HeightRequest="1"
                                         BackgroundColor="#EDF2F7"
                                         Margin="0,5,0,10"/>

                                <!-- Детали с увеличенными отступами -->
                                <Grid ColumnSpacing="8" RowSpacing="8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Label Text="Дата:"
                                           Grid.Row="0" Grid.Column="0"
                                           TextColor="#718096"
                                           FontSize="14"/>
                                    <Label Text="{Binding ApplicationDate, StringFormat='{0:dd.MM.yyyy}'}"
                                           Grid.Row="0" Grid.Column="1"
                                           TextColor="#1A202C"
                                           FontSize="14"/>

                                    <Label Text="Статус:"
                                           Grid.Row="1" Grid.Column="0"
                                           TextColor="#718096"
                                           FontSize="14"/>
                                    <Label Text="{Binding Status}"
                                           Grid.Row="1" Grid.Column="1"
                                           FontSize="14"
                                           TextColor="{Binding StatusColor}"
                                           FontAttributes="Bold"/>
                                </Grid>
                            </StackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <!-- Индикатор загрузки -->
            <ActivityIndicator x:Name="loadingIndicator"
                               Color="#4299E1"
                               IsRunning="False"
                               IsVisible="False"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
        </Grid>
    </RefreshView>
</ContentPage>